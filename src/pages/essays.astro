---
import Layout from "../layouts/Layout.astro";
import ListContent from "../components/ListContent.astro";
let allEssays = await Astro.glob('./essays/*.md');
---

<Layout title="Essays">
    <h1>Essays</h1>
    <ListContent content={allEssays}/>
</Layout>
<style>
    h1 {
        margin-bottom: 30px;
    }
</style>